<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <gradient
                android:angle="90"
                android:endColor="#ff0765"
                android:startColor="#ff0765" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dp" />
                <stroke
                    android:width="1dp"
                    android:color="#000000" />
                <gradient
                    android:angle="90"
                    android:endColor="#FDFDFF"
                    android:startColor="#FDFDFF" />
            </shape>
        </clip>
    </item>
</layer-list>